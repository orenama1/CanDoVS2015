<Window
    x:Class="KabeDon.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KabeDon.Wpf"
    mc:Ignorable="d"
    Title="クラウディア(仮)" Height="800" SizeToContent="Width">
    <Grid>
        <Viewbox>
            <Grid x:Name="Cloudia" Background="White">
                <Viewbox>
                    <Grid>
                        <Image x:Name="CloudiaImage" Width="1080" Height="1920" />
                        <TextBlock x:Name="ScoreText" HorizontalAlignment="Right" FontSize="50" />
                    </Grid>
                </Viewbox>
                <Button x:Name="StartButton" Content="開始" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" />
            </Grid>
        </Viewbox>
    </Grid>
</Window>
